    /**
     * dateTime
     * 
     * @param datetime $dateTime
     * @return mixed
     */
    function dateTime($datetime)
    {
        $datetimeexploded = explode(" ", $datetime);
        $dateexploded = explode("-", $datetimeexploded[0]);
        return "{$dateexploded[2]}/{$dateexploded[1]}/{$dateexploded[0]} Ã s {$datetimeexploded[1]}";
    }
